%h1 Musikwahl

%h2 Musik Zeit

#wish_form
  %form{:action=>"/tanzmusik_zeit",:method=>"post"}
    %table{:class => "survey_table"}
      %thead
        %tr
          %th
          - @categories.each do |a|
            %th
              #{a.value}
      %tbody
        - @times.each do |time|
          %tr
            %td
              #{time.name}:
            - @categories.each do |a|
              %td
                %input{:type=>"radio",:name=>"#{time.name}",:value=>"#{a.value}", :checked => a.value == "Gar Nicht"}  

    #confirm
      %input{:type=>"Reset", :class=>"clean_input"}
      %input{:type=>"Submit", :class=>"clean_input",:value=>"Weiter"}