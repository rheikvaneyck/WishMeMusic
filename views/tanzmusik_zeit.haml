%h1 Musikwahl

%h2 Musik Zeit

#wish_form
  %form{:action=>"/tanzmusik_zeit",:method=>"post"}
    %table{:class => "survey_table"}
      %thead
        %tr
          %th
          - @categories.each do |a|
            %th
              #{a}
      %tbody
        - @times.reverse_each do |time|
          %tr
            %td
              #{time}:
            - @categories.each do |a|
              %td
                %input{:type=>"radio",:name=>"#{time}",:value=>"#{a}", :checked => a == "Lieber nicht"}  

    #confirm
      %input{:type=>"Reset", :class=>"clean_input"}
      %input{:type=>"Submit", :class=>"clean_input",:value=>"Weiter"}