:javascript
  $(function() {
    $( ".help_icon" ).tooltip({ tooltipClass: "help_icon_tooltip" });
  });
%h1 Musikwahl  
%br
%h2 Musik Genre

#wish_form
  %form{:action=>"/tanzmusik_genre",:method=>"post"}
    %table{:class => "survey_table"}
      %thead
        %tr
          %th{:colspan => "2"}
          - @categories.each do |a|
            %th
              #{a}
      %tbody
        - @genres.each do |genre|
          %tr
            %td
              #{genre}
            %td
              %img{:src => 'images/help.png', :align => 'right', :class => 'help_icon', :title => "#{@descriptions[genre]}"}
            - @categories.each do |a|
              %td
                %input{:type=>"radio",:name=>"#{genre}",:value=>"#{a}", :checked => a == "Lieber nicht"} 

    #confirm
      %input{:type=>"Reset", :class=>"clean_input"}
      %input{:type=>"Submit", :class=>"clean_input",:value=>"Weiter"}
