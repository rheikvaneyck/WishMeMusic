:javascript
  $(function() {
    $( ".help_icon" ).tooltip({ tooltipClass: "help_icon_tooltip" });
  });
%h1 Musikwahl  
%h2 Hintergrundmusik

%p{:style=>'text-align:justify'}
#wish_form
  %form{:action=>"/hintergrund",:method=>"post"} 
    %ul
      - @hintergr.each do |hinter|   
        %li
          #bg_group
            #bg_radio
              %input{:type=>"radio",:name=>"br_radio",:value=>"#{hinter.name}"}
            #bg_label
              %label #{hinter.name}
            #bg_image
              %img{:src => 'images/help.png', :class => 'help_icon', :title => "#{hinter.description}"}
    #confirm
      %input{:type=>"Reset", :class=>"clean_input"}
      %input{:type=>"Submit", :class=>"clean_input",:value=>"Weiter"}
